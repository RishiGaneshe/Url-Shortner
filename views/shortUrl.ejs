<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener Short</title>
    <style>
        /* Resetting default margin and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Setting background and font properties */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e1e2f, #2f2f4f);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            color: #e0e0e0;
        }

        /* Navigation bar styling */
        .navbar {
            width: 100%;
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: absolute;
            top: 0;
            z-index: 10;
        }

        /* Navigation bar links */
        .navbar h2 {
            margin: 0;
            color: #ffffff;
        }

        .nav-links {
            display: flex;
            gap: 20px;
        }

        .nav-links a {
            text-decoration: none;
            font-size: 16px;
            color: #ffffff;
        }

        .user-info {
            display: none;
            flex-direction: column;
            align-items: center;
            background-color: rgba(30, 30, 30, 0.95);
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            border-radius: 8px;
            position: absolute;
            top: 60px;
            right: 20px;
        }

        /* User information section */
        .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .user-info p {
            margin: 0;
            font-size: 16px;
            color: #ffffff;
        }

        /* Hamburger menu icon */
        .menu-icon {
            display: none;
            cursor: pointer;
            font-size: 24px;
            color: #ffffff;
        }

        /* Container styling for the URL shortener */
        .container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            padding: 30px;
            width: 100%;
            max-width: 650px;
            text-align: center;
            margin-top: 100px;
        }

        /* Header styling */
        h1 {
            font-size: 24px;
            margin-bottom: 25px;
            color: #ffffff;
        }

        /* Form elements styling */
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-size: 16px;
            color: #cccccc;
            text-align: left;
        }

        input[type="url"] {
            padding: 15px;
            border-radius: 8px;
            border: none;
            margin-bottom: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 16px;
            color: black;
        }

        button {
            padding: 15px 25px;
            background: linear-gradient(135deg, #4156f1, #3178f3);
            color: white;
            border: none;
            margin-bottom: 5px;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        /* Button hover effect */
        button:hover {
            transform: translateY(-2px);
        }

        /* New section for displaying generated URLs */
        .url-list {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 100%;
            height: 30%;
            max-width: 650px;
            margin-top: 60px;
            text-align: left;
        }

        .url-list h2 {
            font-size: 20px;
            margin-bottom: 22px;
            color: #ffffff;
        }

        .url-list ul {
            list-style-type: none;
            padding: 0;
        }

        .url-list li {
            margin: 10px 0;
            padding: 9.5px;
            border: 1px solid #555;
            border-radius: 8px;
            background-color:white;
            color: #e0e0e0;
        }

        /* Long URL styling to make it appear truncated in one line */
        .long-url {
            display: block;
            white-space: nowrap; /* Prevents wrapping */
            overflow: hidden; /* Hides overflow */
            text-overflow: ellipsis; /* Adds ellipsis for long URLs */
            color: rgb(14, 13, 13);
        }

        /* Styling for S-URL */
        .short-url {
            color: rgb(93, 120, 241); /* Change color of S-URL to blue */
            font-weight: bold; /* Optional: make it bold */
        }

        /* Media query for mobile responsiveness */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .menu-icon {
                display: block;
            }

            .container {
                padding: 30px;
                max-width: 100%;
                margin-top: 50px;
            }

            .url-list {
                padding: 15px;
            }

            h1 {
                font-size: 22px;
            }

            label {
                font-size: 14px;
            }

            input[type="url"] {
                font-size: 16px;
                padding: 12px;
            }

            button {
                font-size: 16px;
                padding: 12px 24px;
            }

            .navbar h2 {
                font-size: 20px;
            }

            body {
                padding: 20px;
            }
        }

        @media (max-width: 480px) {
            .container, .url-list {
                padding: 20px;
                max-width: 90%;
            }

            h1 {
                font-size: 20px;
            }

            label {
                font-size: 14px;
            }

            input[type="url"] {
                font-size: 16px;
                padding: 14px;
            }

            button {
                font-size: 16px;
                padding: 14px 28px;
            }

            .navbar h2 {
                font-size: 18px;
            }

            body {
                padding: 10px;
            }
        }
    </style>
</head>
<body>

    <!-- Navigation bar -->
    <div class="navbar">
        <h2>URL Shortener</h2>
        <div class="nav-links">
            <a href="/url">Home</a>
            <a href="/url/allurl">All Urls</a>
            <a href="/url/#">Explore</a>
            <a href="/url/logout">Logout</a>
        </div>
        <!-- Menu icon for smaller screens -->
        <div class="menu-icon" onclick="toggleMenu()">â˜°</div>

        <!-- User information that appears when menu icon is clicked -->
        <div class="user-info" id="user-info">
            <img src="https://via.placeholder.com/40" alt="User Image">
            <p>John Doe</p>
        </div>
    </div>

    <!-- URL shortener container -->
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/url" method="POST" name="form">
            <label for="url">Enter Original URL</label>
            <input type="url" name="url" id="url" placeholder="https://example.com" required>
            <button type="submit">Generate</button>
        </form>
    </div>

    <!-- New section to display generated URLs -->
    <div class="url-list">
        <h2>Recently Generated URLs</h2>
        <ul id="url-display">
            <!-- Example entries, replace with dynamic content -->
            <li>
                <span class="long-url"><strong>L-URL:</strong> <%= url[0]?.redirectURL || 'https://example.com' %></span>
                <span class="short-url"><strong>S-URL:</strong> http://192.168.1.2:3000/<%= url[0]?.shortId || 'short.ly/abc123' %></span>
            </li>
            <li>
                <span class="long-url"><strong>L-URL:</strong>  <%= url[0]?.redirectURL || 'https://example01.com' %></span>
                <span class="short-url"><strong>S-URL:</strong> http://192.168.1.2:3000/<%= url[0]?.shortId || 'short.ly/abc123' %></span>
            </li>
        </ul>
    </div>

    <script>
        // Function to toggle user information display
        function toggleMenu() {
            const userInfo = document.getElementById('user-info');
            userInfo.style.display = userInfo.style.display === 'flex' ? 'none' : 'flex';
        }
    </script>
</body>
</html>
